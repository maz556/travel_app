{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest/globals": true
    },
    "root": true,
    "extends": ["eslint:recommended", "airbnb-base"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["jest"],
    "rules": {
        "quotes": ["error", "double"],
        "no-unused-vars": "off",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/webpack*", "**/__test__/*"]}],
        "indent": ["error", 4]
    },
    "ignorePatterns": ["dist*"]
}
